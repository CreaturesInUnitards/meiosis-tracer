{
  "manifest_version": 2,

  "name": "Meiosis Tracer",
  "description": "Adds Meiosis Tracer to Chrome DevTools",
  "version": "0.7.2",
  "author": "foxdonut",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "16": "meiosis16.png",
    "48": "meiosis48.png",
    "128": "meiosis128.png"
  },

  "web_accessible_resources": [ "extension.js" ],

  "devtools_page": "devtool.html",

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "meiosis-tracer.js", "content-script.js" ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  }
}
